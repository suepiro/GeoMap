<h1>Listing post_pictures</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @post_pictures.each do |post_picture| %>
      <tr>
        <td><%= post_picture.post_id %></td>
        <td><%= post_picture.image %></td>
        <td><%= link_to 'Show', post_picture %></td>
        <td><%= link_to 'Edit', edit_post_picture_path(post_picture) %></td>
        <td><%= link_to 'Destroy', post_picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

